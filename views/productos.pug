extends layout 

block content 
    div(class="container")
        div(class="row my-3")
            a(href=baseURL class="btn btn-light inline-block")  Volver al formulario
        div(class="row my-2")
            table(class="table table-hover align-middle text-center")
                thead 
                    tr 
                        th Nombre
                        th Precio
                        th Imagen
                tbody
                    if !isEmpty
                        tr 
                            td(colspan="3") No hay productos registrados aun
                    each item in productos
                        tr
                            td(class="col-3")=item.nombre
                            td(class="col-3")=item.precio
                            td(class="col-3")
                                if item.url
                                    img(class="img-fluid" src=item.url alt=item.nombre)